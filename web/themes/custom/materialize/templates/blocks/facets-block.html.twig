<ul class="collapsible no-pad-top" data-collapsible="expandable">
  <li class="collection-header blue-grey darken-3 white-text">Filters <a href="/search" class="btn blue-text text-darken-4 white right">Reset Filters</a></li>
{% for facet in facets %}
  <li>
    <div class="collapsible-header">
      <i class="material-icons">keyboard_arrow_right</i>{{ facet.title }}
    </div>
    <div class="collapsible-body padded">
      <p>{{ facet.content }}</p>
    </div>
  </li>
{% endfor %}
  <li class="collapsible-header"><a href="/search" class="btn-large blue-grey darken-3 white-text">Reset Filters</a></li>
</ul>
